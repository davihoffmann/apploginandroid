<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.davihoffmann.apploginandroid.LoginActivity"
    android:background="@color/branco">

    <ImageView
        android:id="@+id/imagemViewLoginID"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo_unidavi" />

    <EditText
        android:id="@+id/editTextLoginID"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imagemViewLoginID"
        android:layout_below="@+id/imagemViewLoginID"
        android:layout_marginTop="13dp"
        android:backgroundTint="@color/azul"
        android:ems="10"
        android:hint="@string/texto_login"
        android:inputType="textPersonName"
        android:textAlignment="viewStart" />

    <EditText
        android:id="@+id/editTextSenhaID"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTextLoginID"
        android:layout_below="@+id/editTextLoginID"
        android:backgroundTint="@color/azul"
        android:ems="10"
        android:hint="@string/text_senha"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/botaoLoginID"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTextSenhaID"
        android:layout_below="@+id/editTextSenhaID"
        android:layout_marginTop="33dp"
        android:background="@color/azul"
        android:text="@string/botao_login" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@android:drawable/btn_dialog"
        android:background="@color/branco" />

</RelativeLayout>
